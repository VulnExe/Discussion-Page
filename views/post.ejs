<body>
    <div class="ui secondary  menu">
        <a href="/" class="active item">
          Home
        </a>
        <a href="/register" class="item">
          Register
        </a>
        <a href="/login" class="item">
          Login
        </a>
        <div class="right menu">          
        </div>
      </div>

    <div class="container">
        <form method="POST" action='/post/<%= user._id %>'>
            <div class="form-floating">
                <h3>Topic</h3>
                <label for="floatingTextarea"></label>
                <input type="text" class="form-control" placeholder="Topic" id="floatingTextarea" name="topic"></input>
                
              </div>
              <div class="form-floating">
                  <h3>Description</h3>
                <label for="floatingTextarea2"></label>
                <textarea name="description" class="form-control" placeholder="Post" id="floatingTextarea2" style="height: 100px"></textarea>
                
              </div>
                <div style="margin-top:20px;">
                <button class="btn-lg btn-success" type="submit">Create Post</button>
                </div>
        </form>
    </div>
    

