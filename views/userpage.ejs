<%- include('partials/navbar') -%>
<!-- First Container -->
<div class="container-fluid bg-1 text-center">
  <h3 class="margin">Hello, <%= user.username %></h3>
  <img src="https://cdn-icons-png.flaticon.com/512/219/219983.png" class="img-responsive img-circle margin" style="display:inline" alt="Bird" width="350" height="350">
  <h1></h1>
